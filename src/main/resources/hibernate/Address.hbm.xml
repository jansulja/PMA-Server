<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.tim11.pma.ftn.pmaprojekat.model" auto-import="true">
   <class name="Address" table="ADDRESS" mutable="true" dynamic-update="false" dynamic-insert="false" select-before-update="false" lazy="true" abstract="false">
      <id name="addressId">
         <column name="ADDRESS_ID" sql-type="int" not-null="true"/>
      </id>
      <property name="street" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="ADDRESS_STREET" sql-type="varchar(30)" length="30"/>
      </property>
      <property name="number" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="ADDRESS_NUMBER" sql-type="varchar(4)" length="4"/>
      </property>
      <property name="city" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="ADDRESS_CITY" sql-type="varchar(50)" length="50"/>
      </property>
      <property name="country" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="ADDRESS_COUNTRY" sql-type="varchar(50)" length="50"/>
      </property>
      <bag name="hotel" outer-join="false" lazy="true" optimistic-lock="true">
      	<key>
      		<column name="ADDRESS_ID" sql-type="int" not-null="true" length="0"/>
      	</key>
      	<one-to-many class="com.tim11.pma.ftn.pmaprojekat.model.Hotel"/>
      </bag>
   </class>
</hibernate-mapping>