<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.tim11.pma.ftn.pmaprojekat.model" auto-import="true">
   <class name="Hotel" table="HOTEL" mutable="true" dynamic-update="false" dynamic-insert="false" select-before-update="false" lazy="true" abstract="false">
      <id name="hotelId">
         <column name="HOTEL_ID" sql-type="int" not-null="true"/>
      </id>
      <property name="name" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="HOTEL_NAME" sql-type="varchar(30)" length="30"/>
      </property>
      <property name="description" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="HOTEL_DESCRIPTION" sql-type="varchar(250)" length="250"/>
      </property>
      <property name="website" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="HOTEL_WEBSITE" sql-type="varchar(50)" length="50"/>
      </property>
      <property name="phone" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="HOTEL_PHONE" sql-type="varchar(20)" length="20"/>
      </property>
      <property name="stars" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="HOTEL_STARS" sql-type="int"/>
      </property>
      <property name="rating" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="HOTEL_RATING" sql-type="decimal(2,1)" length="2" precision="1"/>
      </property>
      <property name="reviews" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="HOTEL_REVIEWS" sql-type="int"/>
      </property>
      <property name="imageFilename" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="HOTEL_IMAGE_FILENAME" sql-type="varchar(100)" length="100"/>
      </property>
      <many-to-one name="address" class="com.tim11.pma.ftn.pmaprojekat.model.Address" outer-join="false" update="true" insert="true">
      	<column name="ADDRESS_ID" sql-type="int" not-null="true" length="0"/>
      </many-to-one>
      <set name="amenity" outer-join="false" lazy="true" optimistic-lock="true">
      	<key on-delete="noaction" unique="false">
      		<column name="HOTEL_ID" sql-type="int" not-null="true" length="0"/>
      	</key>
      	<one-to-many class="com.tim11.pma.ftn.pmaprojekat.model.Amenity"/>
      </set>
      <set name="room" outer-join="false" lazy="true" optimistic-lock="true">
      	<key on-delete="noaction" unique="false">
      		<column name="HOTEL_ID" sql-type="int" not-null="true" length="0"/>
      	</key>
      	<one-to-many class="com.tim11.pma.ftn.pmaprojekat.model.Room"/>
      </set>
   </class>
</hibernate-mapping>