<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.tim11.pma.ftn.pmaprojekat.model" auto-import="true">
   <class name="Room" table="ROOM" mutable="true" dynamic-update="false" dynamic-insert="false" select-before-update="false" lazy="true" abstract="false">
      <composite-id>
         <key-property name="roomId">
            <column name="ROOM_ID" sql-type="int" not-null="true"/>
         </key-property>
         <key-many-to-one name="hotel" access="property">
            <column name="HOTEL_ID" sql-type="int" not-null="true" length="0"/>
         </key-many-to-one>
      </composite-id>
      <property name="name" insert="true" update="true" lazy="false" optimistic-lock="true">
         <column name="ROOM_NAME" sql-type="varchar(100)" length="100"/>
      </property>
      <many-to-one name="price" class="com.tim11.pma.ftn.pmaprojekat.model.Price" outer-join="false" update="true" insert="true">
      	<column name="PRICE_ID" sql-type="int" not-null="true" length="0"/>
      </many-to-one>
      <bag name="reservation" outer-join="false" lazy="true" optimistic-lock="true">
      	<key on-delete="noaction" unique="true">
      		<column name="HOTEL_ID" sql-type="int" not-null="true" length="0"/>
      		<column name="ROOM_ID" sql-type="int" not-null="true" length="0"/>
      	</key>
      	<one-to-many class="com.tim11.pma.ftn.pmaprojekat.model.Reservation"/>
      </bag>
      <bag name="RoomAmenity" table="ROOMAMENITY" outer-join="false" lazy="true" optimistic-lock="true">
      	<key on-delete="noaction" unique="true">
      		<column name="HOTEL_ID" sql-type="int" not-null="true" length="0"/>
      		<column name="ROOM_ID" sql-type="int" not-null="true" length="0"/>
      	</key>
      	<many-to-many class="com.tim11.pma.ftn.pmaprojekat.model.Amenity" outer-join="false">
      		<column name="AME_HOTEL_ID" sql-type="int" not-null="true" length="0"/>
      		<column name="AMENITY_ID" sql-type="int" not-null="true" length="0"/>
      	</many-to-many>
      </bag>
   </class>
</hibernate-mapping>